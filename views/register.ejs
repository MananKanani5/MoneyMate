<% layout("/layouts/bolier.ejs") %>

  <body>
    <section>
      <div class="container">
        <div class="row">
          <div class="col-sm-6 col-xs-12 loginForm mx-auto mt-5 p-md-5 p-4 rounded-4 bg-white">
            <form action="/register" method="post">
              <h2 class="fw-bold mb-4 text-center">Register Here</h2>

              <div class="mb-3">
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter Name" required />
              </div>
              <div class="mb-3">
                <input type="text" class="form-control" id="username" name="username" placeholder="Create Username"
                  required />
              </div>
              <div class="mb-3">
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter Email" required />
              </div>
              <div class="mb-3">
                <input type="password" class="form-control" id="password" name="password" placeholder="Create Password"
                  required />
              </div>

              <button type="submit" class="btn btn-primary w-100">
                Register
              </button>
              <div class="mt-3">
                <p class="text-center">
                  Already have an account?
                  <span><a href="/login">Login Here</a></span>
                <div class="text-center">
                  <% if (success_msg) { %>
                    <p style="color: green">
                      <%= success_msg %>
                    </p>
                    <% } %>
                      <% if (error_msg) { %>
                        <p style="color: red">
                          <%= error_msg %>
                        </p>
                        <% } %>
                          <% if (error) { %>
                            <p style="color: red">
                              <%= error %>
                            </p>
                            <% } %>
                </div>
                </p>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
  </body>